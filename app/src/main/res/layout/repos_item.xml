<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/owner_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="5dp"
        >
    <TextView
        android:id="@+id/tv_repo_name"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin"
        android:textSize="22dp"
        android:text="Aaaaaaaaaaabbbbbbbbbbbbbccccccccc"
        android:lines="1"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/tv_repo_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aaaaaaaaaaaaaaaabbbbbbbbbbbbbbbbbbcccccc"
        android:lines="1"
        android:layout_margin="@dimen/text_margin"
        android:textSize="12dp"
        android:textAppearance="?attr/textAppearanceListItem" />



        <TextView
            android:id="@+id/tv_watchers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2345434"
            android:lines="1"
            android:layout_margin="@dimen/text_margin"
            android:textSize="12dp"
            android:textAppearance="?attr/textAppearanceListItem" />


        <TextView
            android:id="@+id/tv_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Languageeeeeeeeee"
            android:lines="1"
            android:layout_margin="@dimen/text_margin"
            android:textSize="12dp"
            android:textAppearance="?attr/textAppearanceListItem" />





    </LinearLayout>



</LinearLayout>
